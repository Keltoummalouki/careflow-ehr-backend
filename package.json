{
  "name": "careflow-ehr-backend",
  "version": "1.0.0",
  "description": "CareFlow EHR est une application de gestion de dossiers médicaux électroniques (EHR) permettant aux professionnels de santé de gérer les patients, les rendez-vous et les informations médicales de manière sécurisée et efficace.",
  "main": "server.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "mocha --timeout 10000 --exit",
    "test:unit": "mocha test/unit/**/*.test.js --timeout 10000 --exit",
    "test:integration": "mocha test/integration/**/*.test.js --timeout 10000 --exit",
    "init:roles": "node src/scripts/initRoles.js",
    "build": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.6",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "uuid": "^13.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "chai": "^6.2.0",
    "mocha": "^11.7.4",
